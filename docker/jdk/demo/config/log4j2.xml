<?xml version="1.0" encoding="UTF-8"?>
<!--日志级别以及优先级排序: OFF > FATAL > ERROR > WARN > INFO > DEBUG > TRACE > ALL -->
<!--Configuration后面的status，这个用于设置log4j2自身内部的信息输出，可以不设置，当设置成trace时，你会看到log4j2内部各种详细输出-->
<!--monitorInterval：Log4j能够自动检测修改配置 文件和重新配置本身，设置间隔秒数-->
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <!--日志文件存储路径-->
        <property name="logDir">logs</property>

        <!--控制台输出格式-->
        <property name="consolePatternLayout">%d{HH:mm:ss} [%c]-[%p] %m%n</property>

        <!--RollingFile 输出格式-->
        <property name="filePatternLayout">%d{yyyy/MM/dd HH:mm:ss} [%c]-[%p] %m%n</property>
        <!--RollingFile 单文件分隔大小-->
        <property name="fileSize">30MB</property>
        <!--RollingFile 存放数量，默认7个-->
        <property name="fileMax">30</property>

        <!--RollingFile 文件名称-->
        <property name="allFileName">${logDir}/demo.log</property>
        <!--RollingFile DEBUG 文件名称-->
        <property name="debugFileName">${logDir}/demo-debug.log</property>
        <!--RollingFile INFO 文件名称-->
        <property name="infoFileName">${logDir}/demo-info.log</property>
        <!--RollingFile WARN 文件名称-->
        <property name="warnFileName">${logDir}/demo-warn.log</property>
        <!--RollingFile ERROR 文件名称-->
        <property name="errorFileName">${logDir}/demo-error.log</property>

        <!--RollingFile 按月归档-->
        <property name="allFilePattern">
            ${logDir}/%d{yyyy-MM}/demo-%d{yyyy-MM-dd}-%i.log.gz
        </property>
        <!--RollingFile DEBUG 按月归档-->
        <property name="debugFilePattern">
            ${logDir}/%d{yyyy-MM}/demo-%d{yyyy-MM-dd}-%i-debug.log.gz
        </property>
        <!--RollingFile INFO 按月归档-->
        <property name="infoFilePattern">
            ${logDir}/%d{yyyy-MM}/demo-%d{yyyy-MM-dd}-%i-info.log.gz
        </property>
        <!--RollingFile WARN 按月归档-->
        <property name="errorFilePattern">
            ${logDir}/%d{yyyy-MM}/demo-%d{yyyy-MM-dd}-%i-warn.log.gz
        </property>
        <!--RollingFile ERROR 按月归档-->
        <property name="errorFilePattern">
            ${logDir}/%d{yyyy-MM}/demo-%d{yyyy-MM-dd}-%i-error.log.gz
        </property>

    </Properties>

    <Appenders>
        <!--控制台-->
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${consolePatternLayout}"/>
            <!--匹配INFO及以上级别-->
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>


        <!--RollingFile-->
        <RollingFile name="allFile" fileName="${allFileName}" filePattern="${allFilePattern}">
            <!--文件输出格式-->
            <PatternLayout pattern="${filePatternLayout}"/>
            <!--单文件分隔大小，拆分出来的文件自动压缩并存档-->
            <SizeBasedTriggeringPolicy size="${fileSize}"/>
            <!--同类型日志文件同一文件夹下可以存放数量，默认为7个-->
            <DefaultRolloverStrategy max="${fileMax}"/>
            <Filters>
                <!--匹配DEBUG及以上级别-->
                <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>

        <!--RollingFile DEBUG-->
        <RollingFile name="debugFile" fileName="${debugFileName}" filePattern="${debugFilePattern}">
            <!--文件输出格式-->
            <PatternLayout pattern="${filePatternLayout}"/>
            <!--单文件分隔大小，拆分出来的文件自动压缩并存档-->
            <SizeBasedTriggeringPolicy size="${fileSize}"/>
            <!--同类型日志文件同一文件夹下可以存放数量，默认为7个-->
            <DefaultRolloverStrategy max="${fileMax}"/>
            <Filters>
                <!--匹配DEBUG-->
                <ThresholdFilter level="INFO" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>

        <!--RollingFile INFO-->
        <RollingFile name="infoFile" fileName="${infoFileName}" filePattern="${infoFilePattern}">
            <PatternLayout pattern="${filePatternLayout}"/>
            <SizeBasedTriggeringPolicy size="${fileSize}"/>
            <DefaultRolloverStrategy max="${fileMax}"/>
            <Filters>
                <!--匹配INFO-->
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>

        <!--RollingFile WARN-->
        <RollingFile name="warnFile" fileName="${warnFileName}" filePattern="${warnFilePattern}">
            <PatternLayout pattern="${filePatternLayout}"/>
            <SizeBasedTriggeringPolicy size="${fileSize}"/>
            <DefaultRolloverStrategy max="${fileMax}"/>
            <Filters>
                <!--匹配WARN-->
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>

        <!--RollingFile ERROR-->
        <RollingFile name="errorFile" fileName="${errorFileName}" filePattern="${errorFilePattern}">
            <PatternLayout pattern="${filePatternLayout}"/>
            <SizeBasedTriggeringPolicy size="${fileSize}"/>
            <DefaultRolloverStrategy max="${fileMax}"/>
            <Filters>
                <!--匹配ERROR-->
                <ThresholdFilter level="FATAL" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>
    </Appenders>

    <!--定义logger,只有定义了logger并引入的appender,appender才会生效 -->
    <Loggers>
        <!--Spring-->
        <Logger name="org.springframework" level="INFO"/>
        <!--Mybatis-->
        <Logger name="org.apache.ibatis" level="INFO"/>
        <Logger name="org.apache.http" level="INFO"/>
        <Logger name="org.mybatis" level="INFO"/>
        <!--Hibernate-->
        <Logger name="org.hibernate" level="INFO"/>
        <Logger name="org.apache.shiro" level="INFO"/>
        <Logger name="io.netty" level="INFO"/>
        <Logger name="io.lettuce" level="INFO"/>

        <!--默认日志级别-->
        <Root level="all">
            <AppenderRef ref="console"/>
            <AppenderRef ref="allFile"/>
            <AppenderRef ref="debugFile"/>
            <AppenderRef ref="infoFile"/>
            <AppenderRef ref="warnFile"/>
            <AppenderRef ref="errorFile"/>
        </Root>

    </Loggers>
</Configuration>
